<script>
function openTab(evt, tabName) {
  var i, content, buttons;
  // Sembunyikan semua konten menu
  content = document.getElementsByClassName("menu-section");
  for (i = 0; i < content.length; i++) {
    content[i].classList.remove("active");
  }
  // Hapus status 'active' dari semua tombol
  buttons = document.getElementsByClassName("tab-btn");
  for (i = 0; i < buttons.length; i++) {
    buttons[i].classList.remove("active");
  }
  // Tampilkan konten tab yang dipilih dan aktifkan tombolnya
  document.getElementById(tabName).classList.add("active");
  evt.currentTarget.classList.add("active");
}
</script>

